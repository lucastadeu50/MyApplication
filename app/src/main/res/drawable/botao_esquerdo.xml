<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
        <corners

        android:topLeftRadius="180dp"
        android:bottomLeftRadius="180dp"

        />
    <solid
        android:color="#DE4A1265"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
</shape>
</item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners

                android:topLeftRadius="180dp"
                android:bottomLeftRadius="180dp"

                />
            <solid
                android:color="#c9b2f6"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>/>
    </item>
</selector>