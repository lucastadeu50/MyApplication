<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6666cc"
    tools:context="com.example.dimasjose.myapplication.control.GravacaoActivity">

    <Button
        android:textSize="20dp"
        android:id="@+id/buttonGravar"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@android:drawable/ic_btn_speak_now"
        android:drawableTint="#6666cc"
        android:text="Gravar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:drawableTint="#6666cc"
        android:text="Ouvir Gravação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPararGravaçao" />

    <Button
        android:id="@+id/buttonAnalisePerceptiva"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:text="Análise Perceptiva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStop" />

    <Button
        android:id="@+id/buttonAnaliseQuantitativa"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:text="Análise Quantitativa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnalisePerceptiva"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonPararGravaçao"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/ic_stop_black_24dp"
        android:drawableTint="#6666cc"
        android:text="Parar Gravação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGravar" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textColor="#6666cc"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/ic_stop_black_24dp"
        android:drawableTint="#6666cc"
        android:text="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay" />
</android.support.constraint.ConstraintLayout>